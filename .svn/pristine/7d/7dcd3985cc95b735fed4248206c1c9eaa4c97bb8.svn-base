<UserControl x:Class="Platform.Main.Views.DesignPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid Margin="{StaticResource RootMargin}">
        <DockPanel Name="DockPanel" Background="Transparent" Margin="10,5,10,0">
            <!-- Toolbars will be inserted here (index: 1) -->
            <!-- Statusbar will be inserted here (index: Count-2) -->
        </DockPanel>
    </Grid>
</UserControl>
